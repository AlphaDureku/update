<section id=searchdoctor>
    <div class="container pb-1"></div>
    <div class="container-fluid pb-4 mb-5" id="hbg">
        <div class="row p-4 mb-4 g-2  d-flex justify-content-center ">
            <div class="tagtitle ">Search a Doctor </div>
            <div class=" col-auto pt-3">
                <form action="/doctors-directory#searchdoctor" id="forms">
                    <div class="form-outline l-name ">
                        <input type="search" name="doctor_Lname" class="form-control doctor " placeholder="Doctor's Last Name" aria-label="Search" value="<%=retainDoctorQuery.Lname%>" />
