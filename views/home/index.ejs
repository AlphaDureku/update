            <section id=track>
                <div class="container pb-1"></div>
                <div class="container-fluid pb-5 mb-5" id="hbg">
                    <div class="row m-3 pt-4">
                        <div class="tagtitle ">Tracker</div>
                        <p class="tagtitle pt-2" style="font-size: 15px; font-weight: 400; ">Manage and Track your appointment using your Registered Email Address</p>
                        <p class="tagtitle" style="font-size:15px;  ">Email Address</p>

                        <div class="col-md text-center  ">
                            <div class="form-group ">
                                <input type="email" class="form-control container-fluid" style="  width: 40%;
                                 height: 30px;" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter email">
                            </div>

                            <button type="button" class="btn btn-success mt-3" style="width: 90px;" id="modal-btn">Search</button>

                            <div class="modal fade modal" id="modal" tabindex="-1" aria-labelledby="modlabel" aria-hidden="true" data-bs-backdrop="static">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header align-content-center">
                                            <div class=" col modal-title fs-5">Email Verification</div>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body text-center">
                                            <label class="modal-form">
                                                (OTP) One Time Password has been sent to
                                            </label>
                                            <label class="modal-form" style="font-weight: 600;">
                                                your Email Address
                                            </label>
                                            <p> Please Enter (6) digit code to complete your verification. </p>

                                            <div class=" otp-form  container-fluid text-center">
                                                <input type="text" id="otpInput" class="form-control" style="text-align: center;" />
                                            </div>
                                            <span id="otpError" style="color: red; font-weight: 500; display: none;"> <br>Incorrect OTP PIN, please try again.<br></span>
                                            <label class="label pt-3">OTP is valid for 3 minutes</label>
                                        </div>
                                        <div class="modal-footer">

                                            <button type="button" class="btn btn-success" style="border-radius:10px; background-color:#FF0000; border-color: #FF0000 ;width: 110px" ; data-bs-dismiss="modal" id="cancel_modal">Cancel</button>
                                            <button type="button" class="btn btn-success" style="border-radius:10px ;width: 115px; height: 41px" onclick="trackingCompareOTP(document.getElementById('otpInput').value, document.getElementById('inputEmail').value)">Verify</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal fade modal" id="error" tabindex="-1" aria-labelledby="modlabel" aria-hidden="true" data-bs-backdrop="static">
                                <div class="modal-dialog  modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="col modal-title fs-5">Invalid E-mail</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <span id="homeEmail" style="font-weight: 500; display: none; margin: 20px;">No record associated with this email.</span>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>


