<section id="patient_form">
    <div class="container-fluid">
        <div class="row pt-4 pb-4 justify-content-center">
            <div class="tagtitle" style="font-size: 25px; color:rgba(56, 132, 64, 1) ;">Patient information</div>
        </div>
    </div>


    <div class="container pt-4 p-4">
        <div class="row">
            <p>Please provide your information. This will be used for your appointment </p>
        </div>

        <div class="row pt-5  ">
            <div class="col">
                <form action="/book-appointment/getPatient-Info" method="post">
                    <label class="patientInfo mb-3">First Name</label>
                    <label class="required" style="color: #FF0000;font-weight: 900;">*</label>
                    <input type="text" class="form-control " name="Fname" required>

            </div>
            <div class="col">
                <label class="patientInfo mb-3">Middle Name</label>
                <input type="text" class="form-control" name="Mname" required>
            </div>
            <div class="col">

                <label class="patientInfo mb-3">Last Name</label>
                <label class="required" style="color: #FF0000;font-weight: 900;">*</label>
                <input type="text" class="form-control" name="Lname" required>

            </div>
        </div>
        <div class="row pt-5">
            <div class="col">

                <label class="patientInfo mb-3">Date of Birth</label>
                <label class="required" style="color: #FF0000;font-weight: 900;">*</label>
                <input id="Date" class="form-control" type="date" name="dateOfBirth" required/>

            </div>
            <div class="col">

                <label class="patientInfo mb-3">Contact Number</label>
                <label class="required" style="color: #FF0000;font-weight: 900;">*</label>
                <input type="tel" id="typePhone" class="form-control" name="contactNumber" required/>

            </div>
        </div>
        <div class="row pt-5 mb-3 ">
            <div class="col">

                <div class="form-outline ">
                    <label class="form-label" for="formA">Address</label>
                    <label class="required" style="color: #FF0000;font-weight: 900;">*</label>
                    <input type="text" id="formA" class="form-control" name="address" required/>
                </div>

            </div>

            <div class="col">
                <div class="row">
                    <div class="col">

                        <label class="patientInfo ">Gender</label>
                        <label class="required" style="color: #FF0000;font-weight: 900;">*</label>

                    </div>
                </div>
                <div class="form-check-inline mt-3 subp" style="font-size: 15px;">
                    <input class="form-check-input" type="radio" name="gender" value="M" checked>
                    <label class="form-check-label" for="radios1"> Male </label> </div>
                <div class="form-check-inline mt-2 subp" style="font-size: 15px;">
                    <input class="form-check-input" type="radio" name="gender" value="F">
                    <label class="form-check-label" for="radios2">Female</label>

                </div>
            </div>
        </div>
        <div class="row pt-5 justify-content-end">
            <button type="button" class="btn btn-success btn me-3 rbutton " style="width: 110px; background-color: #FF0000; border-color: #FF0000; " onclick="window.location.href='/book-appointment/clinic'">Back</button>
            <button type="submit " class="btn btn-success btn " data-bs-toggle="modal" data-bs-target="#otpmodal" style="width: 110px;">Proceed</button>
            </form>
        </div>
    </div>
</section>